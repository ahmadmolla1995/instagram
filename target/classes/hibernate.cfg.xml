<?xml version="1.0" encoding="UTF-8" ?>

<hibernate-configuration>
    <session-factory>
        <property name="hibernate.connection.username">root</property>
        <property name="hibernate.connection.password"> </property>
        <property name="hibernate.connection.url"> jdbc:mysql://localhost/Instagram?createDatabaseIfNotExist=true </property>
        <property name="hibernate.connection.driver_class">com.mysql.cj.jdbc.Driver</property>
        <property name="show_sql">true</property>
        <property name="hibernate.hbm2ddl.auto">update</property>
        <mapping class="instagram.model.Account" />
        <mapping class="instagram.model.Post" />
        <mapping class="instagram.model.Comment" />
    </session-factory>
</hibernate-configuration>

